<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MiAgendaUTN.ViewModels"
             x:Class="MiAgendaUTN.Views.PreferenciasPage"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:PreferenciasViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Nombre de usuario" Text="{Binding NombreUsuario}" />
        <Switch IsToggled="{Binding TemaOscuro}" />
        <Label Text="Tema oscuro" />
        <Button Text="Guardar" Command="{Binding GuardarPreferenciasCommand}" />
    </VerticalStackLayout>
</ContentPage>
