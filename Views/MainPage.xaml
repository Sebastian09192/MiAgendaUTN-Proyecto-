<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAgendaUTN.Views.MainPage"
             Title="Inicio">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Label Text="📅 Mi Agenda UTN"
                   FontSize="28"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <Border StrokeShape="RoundRectangle 10"
                    Background="#2A9D8F"
                    Padding="15">
                <VerticalStackLayout>
                    <Label Text="Resumen de tus tareas"
                           TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold" />
                    <Label Text="{Binding TotalTareas, StringFormat='Total: {0}'}"
                           TextColor="White"
                           FontSize="18" />
                    <Label Text="{Binding TareasCompletadas, StringFormat='Completadas: {0}'}"
                           TextColor="White"
                           FontSize="18" />
                    <Label Text="{Binding TareasPendientes, StringFormat='Pendientes: {0}'}"
                           TextColor="White"
                           FontSize="18" />
                </VerticalStackLayout>
            </Border>

            <Button Text="Ver lista de tareas"
                    Command="{Binding IrAListaTareasAsync}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
