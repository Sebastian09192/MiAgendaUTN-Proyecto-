<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MiAgendaUTN.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MiAgendaUTN.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Tareas"
            ContentTemplate="{DataTemplate views:ListaTareasPage}"
            Route="ListaTareasPage" />
    </TabBar>

</Shell>