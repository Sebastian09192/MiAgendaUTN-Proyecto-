<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:MiAgendaUTN.Helpers"
             x:Class="MiAgendaUTN.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Colores básicos -->
            <Color x:Key="Primary">#512BD4</Color>
            <Color x:Key="Secondary">#DFD8F7</Color>
            <Color x:Key="White">White</Color>
            <Color x:Key="Black">Black</Color>
            <Color x:Key="Gray900">#212121</Color>

            <!-- Converters -->
            <helpers:BoolToColorConverter x:Key="BoolToColorConverter" />
            <helpers:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <helpers:EstadoTareaConverter x:Key="EstadoTareaConverter" />
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />

            <!-- Estilos básicos -->
            <Style TargetType="Page" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="{StaticResource White}" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Gray900}" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="CornerRadius" Value="8" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
